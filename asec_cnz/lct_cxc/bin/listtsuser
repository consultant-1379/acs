# Setting  global variables
#############################
root_user="root"
admin="tsadmin"
tsgroup_user="tsgroup"

# Exit codes
###########################
exit_privilege=3

# Check the privilage of the user
privilege_check(){
cur_user=`id -n -g`
#       tsadmin_id=`${GREP} "^$admin:" /cluster/etc/passwd | ${AWK} -F: '{print $3}'`
#       root_id=`${GREP} "^$root_user:" /etc/passwd | ${AWK} -F: '{print $3}'`
#        if [ "$userid" != "$tsadmin_id" ] && [ "$userid" != "$root_id" ];then
        if [ "$cur_user" != "$admin" ] && [ "$cur_user" != "$root_user" ] && [ "$cur_user" != "$tsgroup_user" ];then
                echo "ERROR: Not enough privileges to use this command"
                echo ""
                exit $exit_privilege
        fi
}
privilege_check

/opt/ap/acs/bin/acs_lct_listtsuser.sh "$@"



